{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": ".",
  "rewrites": [
    {
      "source": "/",
      "destination": "/html/index.html"
    },
    {
      "source": "/menu",
      "destination": "/html/menu.html"
    },
    {
      "source": "/cart",
      "destination": "/html/cart.html"
    },
    {
      "source": "/checkout",
      "destination": "/html/checkout.html"
    },
    {
      "source": "/orders",
      "destination": "/html/orders.html"
    },
    {
      "source": "/admin",
      "destination": "/html/admin.html"
    },
    {
      "source": "/(.*\\.(html|css|js|jpg|png|svg|ico))",
      "destination": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.html)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
